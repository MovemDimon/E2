{
  "version": 2,
  "builds": [
    { "src": "*.html",              "use": "@vercel/static" },
    { "src": "material/**",         "use": "@vercel/static" },
    { "src": "backend/api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/",     "dest": "/index.html" },
    { "src": "/home", "dest": "/home.html" },
    { "src": "/data",     "methods": ["POST"], "dest": "/backend/api/data.js" },
    { "src": "/api/(.*)", "dest": "/backend/api/$1.js" }
  ],
  "headers": [
    {
      "source": "/(.*)\\.(js|css|png|jpg|jpeg|svg|webp|woff2|ttf|ico|html)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=604800, immutable"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-store" }
      ]
    },
    {
      "source": "/data",
      "headers": [
        { "key": "Cache-Control", "value": "no-store" }
      ]
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}
